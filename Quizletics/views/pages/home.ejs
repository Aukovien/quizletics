<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<%- include ('../partials/message', {message: locals.message, error: locals.error}) %>

<main>
    <div class="container">
        <div class="leaderboard">
            <h1>Leaderboard</h1>
            <% if (leaderboard.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th class="RColumn">RANK #</th>
                            <th class="PColumn">PLAYER</th>
                            <th class="SColumn">SCORE</th>
                        </tr>   
                    </thead>
                    <tbody>
                        <% leaderboard.forEach((entry, index) => { %>
                            <tr>
                                <td class="RColumn"><%= index + 1 %></td>
                                <td class="PColumn"><%= entry.username %></td>
                                <td class="SColumn"><%= entry.total_points %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No entries found.</p>
            <% } %>
        </div>
        <div class="featuredQuiz">
            <h1>Featured Quizzes</h1>
        </div>
    </div>
</main>

<%- include ('../partials/footer') %>
